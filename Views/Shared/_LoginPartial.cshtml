
@{
    string num = Session["itemTotal"].ToString();

}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        string name = @Session["name"].ToString();
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="btn" href="@Url.Action("Index","Carro")">
                    <i class="fa fa-shopping-cart" style="font-size:24px;color:lightgoldenrodyellow"></i>
                    <span class="badge" style="color:lightgoldenrodyellow">@num</span>
                </a>
            </li>
            <li>
                @*Html.ActionLink("Hola " + name + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Hola @name<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Mis pedidos", "Index", "Pedidos", null, new { id = "add" })</li>
                </ul>

            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-top:0.3em">
        <!--
                <li>
                        @Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-light" })

                </li>

                <li>
                    @Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary" })
                </li>
            -->
        <li>
            <a class="btn" href="@Url.Action("Index","Carro")">
                <i class="fa fa-shopping-cart" style="font-size:24px;color:lightgoldenrodyellow"></i>
                <span class="badge" style="color:lightgoldenrodyellow">@num</span>
            </a>
        </li>


        <a id="loginLink" class="btn btn-primary" href="@Url.Action("Login","Account")">
            <i>
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                    <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                          d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
                </svg>
            </i>
            Entrar
        </a>
        <a id="registerLink" class="btn btn-primary" href="@Url.Action("Register","Account")">
            <i>
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                    <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                          d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
                </svg>
            </i>

            Registrarse
        </a>
    </ul>

}